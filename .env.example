# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# LocalStack Configuration
LOCALSTACK_ENDPOINT=http://localstack:4566
LOCALSTACK_HOSTNAME=localstack

# S3 Configuration
S3_BUCKET_NAME=mont-images
S3_PRESIGNED_URL_EXPIRY_UPLOAD=3600  # 1 hour in seconds
S3_PRESIGNED_URL_EXPIRY_DOWNLOAD=900  # 15 minutes in seconds

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=ImageMetadata
DYNAMODB_GSI_NAME=UserIdTimestampIndex

# API Configuration
API_GATEWAY_STAGE=dev
THROTTLE_RATE_LIMIT=1000  # requests per second
THROTTLE_BURST_LIMIT=500  # concurrent requests

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# Application
LOG_LEVEL=INFO
